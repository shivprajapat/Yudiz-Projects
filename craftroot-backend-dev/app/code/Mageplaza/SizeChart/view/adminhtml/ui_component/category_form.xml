<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="mp_sizechart">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Mageplaza\SizeChart\Model\Config\Source\AttributeOptions</item>
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Size Chart</item>
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="source" xsi:type="string">category</item>
                    <item name="dataScope" xsi:type="string">mp_sizechart</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="notice" xsi:type="string" translate="true">When the "Inherit from Category/Rule" option is picked, Size Chart which is applied for the product will follow the Size Chart rule or this config of current category (the category which product belong to on current page).</item>
                    <item name="rows" xsi:type="number">8</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>