/** @var \Mageplaza\SizeChart\Block\Product\SizeChart $block */
if ($block->validateProductInRule()):
    /** @var \Mageplaza\SizeChart\Model\Rule $rule */
    $rule = $block->validateProductInRule();
    $ruleTypes = $block->getDisplayTypes();

    foreach ($ruleTypes as $ruleType) {
        echo $this->getChildHtml($ruleType);
    }
    ?>
    <style type="text/css">
        <?php echo $block->getSizeChartCss($rule)?>
    </style>
    <script type="text/javascript">
        var sizeChartData = {
            ruleContentHtml: <?php echo $block->getSizeChartHtml($rule); ?>,
            displayType: '<?php echo $rule->getDisplayType() ?>',
            attributeCode: '<?php echo $block->getNextAttributeCode($rule); ?>',
            attributeId: '<?php echo $block->getNextAttributeId($rule); ?>',
            iconUrl: '<?php echo $block->getIconUrl(); ?>',
            label: '<?php echo $block->getTitle() ?>'
        };

        require(['initpopup']);
    </script>
<?php endif; ?>
